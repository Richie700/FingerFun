<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainMenu"

    android:background="@drawable/mainmenu"

    android:clickable="false">

    <Button
        android:capitalize="characters"
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:text="Tap Race"

        android:padding="5dp"
        android:id="@+id/TR_MainMenu"
        android:textStyle="bold"
        android:background="@color/black"
        android:textSize="22dp"
        android:textColor="#ff26eff4"
        android:textAllCaps="true"

        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:onClick="SwitchToSubMenu_TapRace"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="false" />

    <Button
        android:text="Finger Twist"
        android:textAllCaps="true"
        android:padding="5dp"
        android:background="@color/black"
        android:id="@+id/FT_MainMenu"
        android:textColor="#ff26eff4"
        android:onClick="SwitchToSubMenu_Twister"
        android:textStyle="bold"
        android:textSize="22dp"
        android:textAlignment="center"
        android:capitalize="characters"
        android:layout_width="150dp"
        android:layout_height="75dp"
        android:layout_alignTop="@+id/TR_MainMenu"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false"
        android:layout_alignParentEnd="false" />

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="0"
        android:id="@+id/frameLayout">


    </FrameLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:background="@drawable/finger_funn"
        android:layout_below="@+id/frameLayout"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
